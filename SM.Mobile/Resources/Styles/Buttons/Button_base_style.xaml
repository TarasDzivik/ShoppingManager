<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SM.Mobile.Resources.Styles.Buttons.Button_base_style">

    <Style x:Key="b_base" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#faf"/>
        <Setter Property="TextColor" Value="#fff"/>
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinimumWidthRequest" Value="90"/>
        <Setter Property="WidthRequest" Value="140"/>
        <Setter Property="MaximumWidthRequest" Value="240"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
</ResourceDictionary>